# npm configuration for SWEAT24 Admin Panel

# Handle peer dependencies automatically
legacy-peer-deps=true

# Set a longer timeout for slow connections
fetch-timeout=60000

# Retry failed requests
fetch-retries=3

# Use a specific registry (optional, uncomment if needed)
# registry=https://registry.npmjs.org/

# Save exact versions
save-exact=false

# Install optional dependencies
optional=true

# Show progress bar
progress=true